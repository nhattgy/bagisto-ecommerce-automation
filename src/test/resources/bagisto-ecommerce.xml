<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite_Bagisto_E2E" verbose="1" parallel="none" thread-count="1">

    <listeners>
        <listener class-name="actions.reportConfigs.AllureTestListener"/>
    </listeners>
    <!-- COMMON PARAMETERS -->
    <parameter name="environment" value="local"/>
    <parameter name="urlAdmin" value="https://demo.bagisto.com/bagisto-common/admin/login"/>
    <parameter name="urlUser" value="https://demo.bagisto.com/bagisto-common/"/>

    <!-- =============================== E2E FLOW TESTS =============================== -->
    <test name="E2E Flow Tests">
        <parameter name="browser" value="chrome"/>
        <classes>
                        <class name="e2efollow.CustomerAdmin"/>
                        <class name="e2efollow.OrdersUserToAdminView"/>
                        <class name="e2efollow.Registration"/>
                        <class name="e2efollow.NotificationOrderAdmin"/>
                        <class name="e2efollow.UserSubmitReviewAdminCheck"/>
                        <class name="e2efollow.AdminSettingAccount"/>
                        <class name="e2efollow.AdminCreateCouponUserApplies"/>
                        <class name="e2efollow.ProductAdminUser"/>
        </classes>
    </test>

    <!--     =============================== USER MODULE TESTS =============================== -->
    <test name="User Module Tests">
        <parameter name="browser" value="chrome"/>
        <classes>
                        <class name="user.authenticationUser.AuthenticationUserTest"/>
                        <class name="user.cartUser.CartUserTest"/>
                        <class name="user.checkoutUser.CheckoutUserTest"/>
                        <class name="user.checkoutUser.CheckoutWithPayPal"/>
                        <class name="user.checkoutUser.CheckoutUserIsLogged"/>
                        <class name="user.orderUser.OrderUserTest"/>
                        <class name="user.productUser.ProductUserTest"/>
                        <class name="user.profileUser.ProfileUserTest"/>
        </classes>
    </test>

    <!-- =============================== ADMIN MODULE TESTS =============================== -->
    <test name="Admin Module Tests">
        <parameter name="browser" value="chrome"/>
        <classes>
                        <class name="admin.authenticationAdmin.AuthenticationAdminTest"/>
                        <class name="admin.categoryAdmin.CategoryAdminTest"/>
                        <class name="admin.customerAdminTest.CustomerAdminTest"/>
                        <class name="admin.marketingTestAdmin.MarketingAdminTest"/>
                        <class name="admin.ordersAdmin.OrdersAdminTest"/>
                        <class name="admin.productAdmin.ProductAdminTest"/>
        </classes>
    </test>

</suite>
